<Window x:Class="Test.Sections"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="Sections" Height="150" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,30,0,0" TextWrapping="Wrap" Text="Выберите раздел:" VerticalAlignment="Top" FontSize="15"/>
        <ComboBox Name="sections" HorizontalAlignment="Left" Margin="147,30,0,0" VerticalAlignment="Top" Width="135">
            <TextBlock>Биология</TextBlock>
            <TextBlock>Литература</TextBlock>
            <TextBlock>Казахский язык</TextBlock>
        </ComboBox>
        <Button Content="Подтвердить" HorizontalAlignment="Left" Margin="116,79,0,0" VerticalAlignment="Top" Click="SectionsEnterButton_Click"/>
    </Grid>
</Window>
