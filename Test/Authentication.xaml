<Window x:Class="Test.Authentication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
         Title="Test" Height="180" Width="200">
    <Grid Height="Auto" VerticalAlignment="Stretch">
        <TextBlock HorizontalAlignment="Left" Margin="11,22,0,0" TextWrapping="Wrap" Text="Введите логин и пароль" VerticalAlignment="Top" Height="Auto" Width="Auto" FontSize="15"/>
        <TextBlock HorizontalAlignment="Left" Margin="17,54,0,0" TextWrapping="Wrap" Text="Логин:" VerticalAlignment="Top" Height="22" Width="47" FontSize="15"/>
        <TextBox x:Name="login" HorizontalAlignment="Left" Margin="64,54,0,0" VerticalAlignment="Top" Width="113"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="64,81,0,0" VerticalAlignment="Top" Width="113"/>
        <TextBlock HorizontalAlignment="Left" Margin="17,81,0,0" TextWrapping="Wrap" Text="Пароль:" VerticalAlignment="Top" Height="22" Width="47" FontSize="12"/>
        <Button Content="Войти" HorizontalAlignment="Center" Margin="64,113,53,0" VerticalAlignment="Top" Width="Auto" Click="EnterButton_Click"/>
    </Grid>
</Window>
